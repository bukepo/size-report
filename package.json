{
  "name": "size-report",
  "version": "0.1.0",
  "description": "Generate size report for pull request",
  "author": "OpenThread Authors <openthread-users@googlegroups.com>",
  "license": "Apache-2.0",
  "repository": "https://github.com/openthread/size-report.git",
  "homepage": "https://github.com/openthread/size-report",
  "bugs": "https://github.com/openthread/size-report/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "ejs": "^3.1.3",
    "probot": "^9.11.5"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "nock": "^10.0.0",
    "nodemon": "^1.19.4",
    "smee-client": "^1.0.2",
    "standard": "^12.0.1"
  },
  "engines": {
    "node": ">= 10.14.1"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
